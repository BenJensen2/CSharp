@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New User</title>
</head>
<body>
    <div class="container">
        <h1>Enter your information</h1>
        <form asp-action="Create" asp-Controller="Home" method="POST">
            <div class="form-group mt-5">
                <span asp-validation-for="FirstName"></span>
                <label class="col-2" asp-for="FirstName">First Name</label>
                <input class="col-2" asp-for="FirstName">
            </div>
            <div class="form-group">
                <span asp-validation-for="LastName"></span>
                <label class="col-2" asp-for="LastName">Last Name</label>
                <input class="col-2" asp-for="LastName">
            </div>
            <div class="form-group">
                <span asp-validation-for="Age"></span>
                <label class="col-2" asp-for="Age">Age</label>
                <input class="col-1" asp-for="Age">
            </div>
            <div class="form-group">
                <span asp-validation-for="Email"></span>
                <label class="col-2" asp-for="Email">Email</label>
                <input class="col-4" asp-for="Email">
            </div>
            <div class="form-group">
                <span asp-validation-for="Password"></span>
                <label class="col-2" asp-for="Password">Password</label>
                <input class="col-3" asp-for="Password">
            </div>
            <div class="form-group">
                <input value="Submit" type="submit">
            </div>
        </form>
    </div>
</body>
</html>