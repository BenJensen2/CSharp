@model LoginUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> *@
</head>
<body>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col-11">
                <h1>Login to this Cool Site!</h1>
            </div>
            <div class="col-1 d-flex align-items-center">
                <a
                    asp-controller= "LogReg"
                    asp-action = "Register">
                    Register
                </a>
            </div>
        </div>
        <form asp-action="SubmitLogin" asp-controller="LogReg">
            <div class="row">
                <div class="col-2"> 
                    <label asp-for="LoginEmail">Email</label>
                    <input asp-for="LoginEmail">
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>

                    <label asp-for="LoginPassword">Password</label>
                    <input asp-for="LoginPassword">
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>

                    <button class="mt-4">Sign up Now</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>