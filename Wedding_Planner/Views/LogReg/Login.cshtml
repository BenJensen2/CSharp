@model LoginUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> *@
</head>
<body>
    <div class="container">
        <div class="row mt-4 mb-4">
            <div class="col-11">
                <h1>Login</h1>
            </div>
            <div >

            </div>
        </div>
    </div>

    <form asp-action="SubmitLogin" asp-controller="LogReg">
            <div class="row">
                <div class="col-5">
                    
                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="LoginEmail">Email Address</label>
                        </div>
                        <div class="col">
                            <input asp-for="LoginEmail">
                        </div>
                        <div class="col">
                            <span asp-validation-for="LoginEmail" class="text-danger"></span>
                        </div>
                    </div>
                    

                    <div class="form-group row">
                        <div class="col-6">
                            <label asp-for="LoginPassword">Password</label>
                        </div>
                        <div class="col">
                            <input asp-for="LoginPassword">
                        </div>
                        <div class="col">
                            <span asp-validation-for="LoginPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button class="mt-4">Submit</button>
                </div>
            </div>
        </form>
</body>
</html>